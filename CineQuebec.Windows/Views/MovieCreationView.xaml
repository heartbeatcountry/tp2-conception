<UserControl x:Class="CineQuebec.Windows.Views.MovieCreationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:views="clr-namespace:CineQuebec.Windows.Views"
             d:DataContext="{d:DesignInstance views:MovieCreationViewModel}"
             xmlns:rs="clr-namespace:CineQuebec.Windows.Ressources.i18n"
             xmlns:s="https://github.com/canton7/Stylet"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition  Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="50"/>
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left"
               Source="/Ressources/Images/logoCinema.png" MaxWidth="60px" />


        <Button x:Name="BtnAccueil" Content="{x:Static rs:Resource.admin_menu_accueil}" Grid.Column="5" Grid.Row="1"
                Style="{StaticResource MenuButton}" />
        <Button x:Name="BtnAbonnes" Content="{x:Static rs:Resource.admin_menu_abonnes}" Grid.Column="6" Grid.Row="1"
                Style="{StaticResource MenuButton}" />
        <Button x:Name="BtnDeconnecter" Content="{x:Static rs:Resource.admin_menu_deconnection}" Grid.Column="7"
                Grid.Row="1" Style="{StaticResource MenuButton}" />

        <Label x:Name="LblTitreFilm" Content="{x:Static rs:Resource.admin_ajout_titre_film}" Grid.Row="2"
               Grid.Column="1" VerticalAlignment="Center" />
        <TextBox x:Name="txtTitreFilm" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding titreFilm}"
                 Style="{StaticResource DefautInput}" />

        <Label x:Name="LblDescriptionFilm" Content="{x:Static rs:Resource.admin_ajout_description_film}" Grid.Row="3"
        Grid.Column="1" VerticalAlignment="Center" />
        <Border BorderBrush="Black" BorderThickness="2">
            <TextBlock x:Name="descriptionFilm" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding descriptionFilm}"/>

        </Border>
     


        <Label x:Name="LblDureeFilm" Content="{x:Static rs:Resource.admin_ajout_duree_film}" Grid.Row="5"
               Grid.Column="1" VerticalAlignment="Center" />
        <TextBox x:Name="dureeFilm" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding dureeFilm}"
                 Style="{StaticResource DefautInput}" />


        <Label x:Name="LblCategorieFilm" Content="{x:Static rs:Resource.admin_ajout_categorie_film}" Grid.Row="6"
               Grid.Column="1" VerticalAlignment="Center" />
        <ComboBox x:Name="Categorie" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" MaxWidth="170" BorderBrush="Black" BorderThickness="2" Margin="10" >
            <ComboBoxItem Name="cbxHumour" >Humour</ComboBoxItem>
            <ComboBoxItem Name="cbxRomantique" >Romantique</ComboBoxItem>
            <ComboBoxItem Name="cbxHorreur" >Horreur</ComboBoxItem>
            <ComboBoxItem Name="cbxScienceFiction" >Science Fiction</ComboBoxItem>

            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>

        </ComboBox>


        <DatePicker  x:Name="dpDateSortie"  Grid.Row="2"   Grid.Column="5"  Grid.ColumnSpan="2"/>


        <Label x:Name="LblActeursFilm" Content="{x:Static rs:Resource.admin_ajout_acteurs_film}" Grid.Row="3"
               Grid.Column="5" VerticalAlignment="Center" />
        <ListBox SelectionMode="Multiple" Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" Grid.RowSpan="2"  
                 BorderBrush="Black" BorderThickness="2" Margin="10">
                <ListBox.Effect>
                    <DropShadowEffect />
                </ListBox.Effect>
            <ListBoxItem>Brad Pitt</ListBoxItem>
            <ListBoxItem>Angélina Jolie</ListBoxItem>
            <ListBoxItem>Timothée Chalamet</ListBoxItem>
            <ListBoxItem>Zendaya</ListBoxItem>
        </ListBox>

        <Label x:Name="LblRealisateursFilm" Content="{x:Static rs:Resource.admin_ajout_realisateurs_film}" Grid.Row="5"
               Grid.Column="5" VerticalAlignment="Center" />
        <ListBox SelectionMode="Multiple" Grid.Row="5" Grid.Column="6" Grid.ColumnSpan="2" Grid.RowSpan="2"
                 BorderBrush="Black" BorderThickness="2" Margin="10">
            <ListBox.Effect>
                <DropShadowEffect />
            </ListBox.Effect>
            <ListBoxItem>Denis Villeneuve</ListBoxItem>
            <ListBoxItem>David Fincher</ListBoxItem>
            <ListBoxItem>Option 3</ListBoxItem>
            <ListBoxItem>Option 4</ListBoxItem>
        </ListBox>


        <Label x:Name="lblMessageErreur" Content="{Binding messageErreur}"    Grid.Row="7"    Grid.Column="1" Grid.ColumnSpan="7" Grid.RowSpan="2" VerticalAlignment="Center"/>



        <Label x:Name="LblImageFilm" Content="{x:Static rs:Resource.admin_ajout_image_film}" Grid.Row="9"
               Grid.Column="1" VerticalAlignment="Center" />
        <Button x:Name="BtnAjouterImage" Content="{x:Static rs:Resource.admin_ajout_parcourir_film}" Grid.Row="9"
                Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource MenuButton}" />

        <Button x:Name="BtnAnnulerImage" Content="{x:Static rs:Resource.admin_ajout_annuler_film}" Grid.Row="9"
                Grid.Column="6" Style="{StaticResource MenuButton}" Command="{s:Action NavigateToAdminHome}" />
        <Button x:Name="BtnEnregistrerImage" Content="{x:Static rs:Resource.admin_ajout_enregistrer_film}" Grid.Row="9"
                Grid.Column="7" Style="{StaticResource MenuButton}" Command="{s:Action AjouterNouveauFilmAsync}"/>


    </Grid>
</UserControl>